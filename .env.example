# SNP Printer Service Configuration
# Copy this to .env and customize

# =============================================================================
# PRINTER CONFIGURATION
# =============================================================================

# Default printer (additional printers can be added via web UI)
NETWORK_HOST=192.168.50.103
NETWORK_PORT=9100

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

HOST=0.0.0.0
PORT=5000
DEBUG=false

# Config file location (for Docker, use /app/data/config.json)
CONFIG_FILE=/app/data/config.json

# =============================================================================
# NOTIFICATIONS (Optional - can also configure via web UI)
# =============================================================================

# Discord webhook for offline alerts
DISCORD_WEBHOOK_URL=

# Pushover for mobile notifications
PUSHOVER_USER_KEY=
PUSHOVER_APP_TOKEN=

# =============================================================================
# SECURITY (Enable for production!)
# =============================================================================

# Set to 'true' to require API keys for print endpoints
REQUIRE_AUTH=false

# API Keys (generate secure random strings for production)
API_KEY_SNP_SITE=your-secure-api-key-for-snp-site
API_KEY_ADMIN=your-secure-api-key-for-admin
